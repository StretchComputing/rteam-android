<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
  			  android:layout_width="fill_parent" android:layout_height="fill_parent">
  			  
	<ListView android:id="@+id/listAttendance"
			  android:layout_weight="1"
			  android:layout_width="fill_parent" android:layout_height="wrap_content" />
			  			  
  	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
				  android:background="@android:drawable/bottom_bar" android:gravity="center_vertical">
  	
  		<ToggleButton android:id="@+id/btnSelectAll" android:textOn="Set All" android:textOff="Set Single"
					  android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" />
		
 		<Button android:id="@+id/btnSave" android:text="Save" android:enabled="false"
 				android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" />
  	
	</LinearLayout>		  
			  
</LinearLayout>
