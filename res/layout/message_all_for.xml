<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
  			  android:layout_width="fill_parent" android:layout_height="fill_parent">
  			  
  	<ExpandableListView android:id="@+id/listMessages" android:layout_weight="1"
  			  			android:layout_width="fill_parent" android:layout_height="wrap_content" />
  			  
  	<LinearLayout android:id="@+id/barBottom" 
   				  android:layout_width="fill_parent" android:layout_height="wrap_content"
				  android:background="@android:drawable/bottom_bar" android:gravity="center_vertical">
		 	
		  	<Button android:id="@+id/btnSend" android:text="Send" 
		  			android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" />
		 	<Button android:id="@+id/btnDelete" android:text="Delete" android:enabled="false"
		 	 		android:layout_width="0dip" android:layout_weight="1" android:layout_height="wrap_content" />

	</LinearLayout>
  			    			  
</LinearLayout>
