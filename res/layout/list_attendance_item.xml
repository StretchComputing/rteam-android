<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="horizontal" android:padding="5dp"
  			  android:layout_width="fill_parent" android:layout_height="wrap_content">

	<TextView android:id="@+id/txtAttendee" android:text="Mike Barker"
			  android:layout_weight="1" android:layout_gravity="center_vertical"
			  android:layout_width="wrap_content" android:layout_height="wrap_content" />

	<ToggleButton android:id="@+id/btnPresent" android:textOn="Present" android:textOff="Present"
				  android:layout_gravity="center_vertical" 
			      android:layout_width="wrap_content" android:layout_height="wrap_content" />
			      
    <ToggleButton android:id="@+id/btnMissing" android:textOn="Missing" android:textOff="Missing"
    			  android:layout_gravity="center_vertical" 
			      android:layout_width="wrap_content" android:layout_height="wrap_content" />
			      
</LinearLayout>
