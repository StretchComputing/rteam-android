<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical" android:padding="5dp"
  			  android:layout_width="fill_parent" android:layout_height="fill_parent">
  			  
  	<TextView android:text="Click here to send us Feedback:"
  			  android:layout_width="fill_parent" android:layout_height="wrap_content" />
  			  
  	<Button android:id="@+id/btnFeedback" android:text="Give Feedback" android:layout_gravity="center"
  			android:layout_width="wrap_content" android:layout_height="wrap_content" />
  			  
  	<TextView android:text="Like rTeam? Help us out by writing a review!"
  			  android:layout_width="fill_parent" android:layout_height="wrap_content" />
  			  
 	<Button android:id="@+id/btnRate" android:text="Rate rTeam!" android:layout_gravity="center"
  			android:layout_width="wrap_content" android:layout_height="wrap_content" />
  			  		  
</LinearLayout>
